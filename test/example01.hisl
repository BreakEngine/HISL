program main{

	iobuffer vs_pos{
		vec4 position : POSITION;
	};

	vertex VS{
		uniform Matrices{
			mat4 model,view,proj;
		};
		void main(vs_pos in){
			g_position = proj*view*model*in.position;
		}
	};

	pixel PS{
		void main(){
			g_color = vec4(1,1,1,1);
		}
	};

	routine main{
		g_vs = VS;
		g_ps = PS;
	};
};